@model List<Contact>
<a asp-action="Create">Add</a>
<table class="table">
    <thead>
        <tr>
            <th>Contact id</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Contact number</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.ContactId.</td>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.Company</td>
                <td>@contact.Email</td>
                <td>@contact.ContactNumber</td>
                <td>
                    <img src="@Url.Content("~/Uploads/" +contact.FileName)" alt="Category img" width="100" height="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.ContactId">Edit</a>|
                    <a asp-action="Details" asp-route-id="@contact.ContactId">Details</a>|
                    <a asp-action="Delete" asp-route-id="@contact.ContactId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
